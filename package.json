{
  "name": "game-testing-framework",
  "version": "1.0.0",
  "description": "Comprehensive gaming platform with automated testing framework",
  "main": "index.html",
  "scripts": {
    "start": "npx serve .",
    "dev": "npx serve . --live",
    "test": "node test-runner.js",
    "test:quick": "node test-runner.js --quick",
    "test:game": "node test-runner.js --game",
    "test:performance": "node test-runner.js --performance",
    "test:watch": "node test-runner.js --watch",
    "test:manual": "start test-framework.html",
    "serve": "node -e \"require('http').createServer((req,res)=>{const fs=require('fs'),path=require('path'),url=require('url').parse(req.url,true),file=url.pathname==='/'?'index.html':url.pathname.slice(1);try{const content=fs.readFileSync(file);res.writeHead(200,{'Content-Type':file.endsWith('.html')?'text/html':file.endsWith('.css')?'text/css':file.endsWith('.js')?'application/javascript':'text/plain'});res.end(content)}catch(e){res.writeHead(404);res.end('Not Found')}}).listen(8080,()=>console.log('Server running on http://localhost:8080'))\""
  },
  "devDependencies": {
    "puppeteer": "^21.0.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0"
  },
  "keywords": ["testing", "games", "html5", "automation", "pacman", "tetris", "breakout"],
  "author": "Game Developer",
  "license": "MIT"
}
